{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}


{% block body %}

<section class="container m-5">
    <div class="row ">
        {% for article in articles %}
            <div class="card" style="width: 18rem;">
            <img src="{{article.photo}}" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">{{article.titre}}</h5>
                <span>{{article.publication | date('d-M-y')}}</span><br>
                <p class="card-text">{{article.description}}</p>
                <p class="card-text">{{article.auteur}}</p>

                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{path('app_article_delete', {id:article.id})}}" class="btn btn-danger">Supprimer</a>
                <a href="{{path('app_article_update', {id:article.id})}}" class="btn btn-primary">Modifier</a>
                {% endif %}
            </div>
            </div>
        {% endfor %}
    </div>
</section>







